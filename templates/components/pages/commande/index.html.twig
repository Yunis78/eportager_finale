{% extends 'base.html.twig' %}

{% block title %}CRUD Commande{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table table-sm table-hover table-end-fit">
        <thead class="table-active">
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>PayedAt</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.payedAt ? commande.payedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.amount }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">Voir</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune commande</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Nouvelle Commande</a>
{% endblock %}
