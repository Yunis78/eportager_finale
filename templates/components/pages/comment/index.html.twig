{% extends 'base.html.twig' %}

{% block title %}CRUD Comment{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table table-sm table-hover table-end-fit">
        <thead class="table-active">
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Message</th>
                <th>Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.status }}</td>
                <td>{{ comment.message }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">Voir</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun commentaire</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p><a class="btn btnvert" href="{{ path('comment_new') }}">Nouveau commentaire</a></p>
{% endblock %}

{% exit %}
