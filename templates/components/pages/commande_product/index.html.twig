{% extends 'base.html.twig' %}

{% block title %}CRUD CommandeProduct{% endblock %}

{% block body %}
    <h1>CommandeProduct index</h1>

    <table class="table table-sm table-hover table-end-fit">
        <thead class="table-active">
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>UnitPrice</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande_product in commande_products %}
            <tr>
                <td>{{ commande_product.id }}</td>
                <td>{{ commande_product.quantity }}</td>
                <td>{{ commande_product.unitPrice }}</td>
                <td>
                    <a href="{{ path('commande_product_show', {'id': commande_product.id}) }}">Voir</a>
                    <a href="{{ path('commande_product_edit', {'id': commande_product.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun ticket</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_product_new') }}">Nouveau ticket</a>
{% endblock %}
