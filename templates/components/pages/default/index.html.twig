<!-- cards -->
<div class="container">
    <div class="row">
        <div class="col-12 col-lg-6"> <!-- produits --> <!-- Bouton voir plus de produits -->
            <h2 class="text-center my-5"> <span class="cadre-titre-vert px-2">Derniers</span> produits</h2>
            <div class="row">
                {% for product in products %}
                    <div class="col-12 col-lg-6"> <!-- produits card 1 -->
                        <div class="card mb-3" style="width: 100% ; height:400px ; position:relative"> 
                            <div style="width:100% ; height: 200px ; background-image: url('{{ asset("upload/" ~ product.file.0.path  ) }}');background-size:cover ; background-position:center">
                            </div>
                            <div class="card-body"> 
                                <h5 class="card-title">{{- product.name -}}</h5>
                                <p class="card-text">{{- product.description -}}</p>
                                <a href="{{ path('product_show', {'id': product.id })}}" class="btn btnvert">Découvrir</a>
                                <a href="{{path('cart_add', {'id': product.id}) }}" class="btn btnviolet"><i class="ri-shopping-cart-2-line"></i></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a href="{{ path('front_products') }}" class="btn btnorange text-white mb-4 mt-2">Voir plus de produits</a>

        </div>
    

<!-- producer -->

        <div class="col-12 col-lg-6 pl-5 container-card-producteur-home-page"> <!-- producteurs -->
            <h2 class="text-center my-5"><span class="cadre-titre-violet px-2">Derniers</span> producteurs</h2>
            <div class="row">

                {% if producers|length == 0 %}
                    <!-- à modifier  -->
                    <p>il n'y en a pas</p>
                {% endif %}
    
                {% for producer in producers %}

                
                    <div class="col-12"> <!-- producteurs card 1 -->
                        <div class="card mb-3" style="width: 100% ; height:400px ; position:relative">
                            <div class="producteur w-100 d-flex flex-row align-items-center">
                                <p class="text-center mt-2 mb-1 mx-3 font-weight-bold">{{- producer.user.givenName ~ ' ' ~ producer.user.familyName -}}</p>
                                <p class="text-center mt-2 mb-1 ml-auto mr-3 font-weight-bold">{{- producer.addressCity ~ '  ' ~ producer.addressZipcode -}} <i class="ri-map-pin-2-line"></i></p>
                            </div>
                    
                            <div style="width:100% ; height: 200px ; background-image: url('{{ asset("img/Exploit1.jpg") }}');background-size:cover ; background-position:center">
                            </div>
                            
                            <div class="card-body">
                                <h5 class="card-title font-weight-bold">
                                    {{- producer.name -}}
                                </h5>
                                <div class="col-12 d-flex flex-row align-items-center"  style="position:absolute ; bottom:4%">
                                    <a href="#" class="btn btnviolet ml-0">Découvrir</a>
                                    <p class="ml-auto  mr-4 my-0"><i class="ri-star-line"></i> <i class="ri-star-line"></i> <i class="ri-star-line"></i> <i class="ri-star-line"></i> <i class="ri-star-line"></i></p>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
            <a href="{{ path('producer_index') }}" class="btn btnorange text-white mb-4 mt-2 ml-3">Voir les autres producteurs</a> <!-- Bouton voir les autres producteurs -->

        </div>
        
    </div>
</div>
<!-- avis -->
