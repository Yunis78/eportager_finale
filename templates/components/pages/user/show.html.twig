{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container"> 
    <div class="d-flex justify-content-between">
        <h1>User</h1>
        <p>
            <a class="btn btn-primary" href="{{ path('user_index') }}">back to list</a>
            <a class="btn btnorange" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
        </p>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.givenName }}</td>
            </tr>
            <tr>
                <th>FamillyName</th>
                <td>{{ user.familyName }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>AddressSteet</th>
                <td>{{ user.addressStreet }}</td>
            </tr>
            <tr>
                <th>AddressCountry</th>
                <td>{{ user.addressCountry }}</td>
            </tr>
            <tr>
                <th>AddressComplement</th>
                <td>{{ user.addressComplement }}</td>
            </tr>
            <tr>
                <th>AddressZipcode</th>
                <td>{{ user.addressZipcode }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    

    {{ include('components/pages/user/_delete_form.html.twig') }}
</div>
{% endblock %}
