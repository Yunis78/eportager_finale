{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>FamillyName</th>
                <th>Password</th>
                <th>AddressSteet</th>
                <th>AddressCountry</th>
                <th>AddressComplement</th>
                <th>AddressZipcode</th>
                <th>Phone</th>
                <th>Roles</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.famillyName }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.addressSteet }}</td>
                <td>{{ user.addressCountry }}</td>
                <td>{{ user.addressComplement }}</td>
                <td>{{ user.addressZipcode }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
